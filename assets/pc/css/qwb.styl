.qwb
  width $w = $areaLeftW
  $subTitleH = rem(50)
  $trH = ($areaLeftBdH1 - $subTitleH - rem(10)) * 0.2

  .qwb-bd
    display flex
    justify-content space-between
    height $areaLeftBdH1
    overflow hidden

  .qwb-panel
    width ($w - $gap) * 0.5

    & > table
      width 100%
      margin: 0;
      padding: 0;
      background: none;
      border-collapse: collapse;
      border-spacing: 0;
      $borderColor = #efefef

      tr
        height $trH
        text-align center
        border-bottom 1px solid $borderColor

        td, th
          border-left 1px solid $borderColor

          &:first-child
            border-left none

        &:first-child
          border-top 1px solid $borderColor

        &:last-child
          border-bottom none


  .qwb-pre_tr
    height $trH

  .qwb-pre_title
    height $subTitleH
    line-height @height
    padding-left $gap
    font-weight bold
