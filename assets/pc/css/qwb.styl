.qwb
  width $w = $areaLeftW
  $subTitleH = rem(50)
  $trH = ($areaLeftBdH1 - $subTitleH - rem(10)) * 0.2

  .qwb-bd
    display flex
    height $areaLeftBdH1
    overflow hidden
    justify-content space-between
    align-items center

  .qwb-panel
    width ($w - $gap) * 0.5

    & > table
      width 100%
      margin: 0;
      padding: 0;
      background: none;
      border-collapse: collapse
      border-spacing: 0
      $borderColor = #d97268

      tr
        height $trH
        text-align center
        border-bottom 1px solid $borderColor

        td, th
          border-left 1px solid $borderColor

          &:first-child
            border-left none

        &:first-child
          border-top 1px solid $borderColor

        &:last-child
          border-bottom none


  .qwb-pre_tr
    height $trH

  .qwb-pre_title
    height $subTitleH
    line-height @height
    padding-left $gap
    font-weight bold

  .qwb-pre_tr
    height 39px

  .qwb-pre_title
    font-weight bold
    font-size 21px

  .qwb-aft
    display flex
    justify-content space-around
    align-items center
    width 100%
    margin 10px 0

    &_left
      font-size 23px
      font-weight bold
      color yellow
      -webkit-text-stroke-width: 1.4px;
      -webkit-text-stroke-color: #d93f42;
      letter-spacing: 5px;

    &_right
      font-size 23px
      font-weight bold
      color yellow
      -webkit-text-stroke-width: 1.4px;
      -webkit-text-stroke-color: #d93f42;
      letter-spacing: 5px;

    &_vs
      width 35px
      height 35px
      margin 0 20px

      & > img
        width 100%
        height 100%

  .qwb-bd_flex
    display flex
    flex-direction column
