@import "vendor/vendor.styl"

// 设备尺寸
$deviceWidth = 960px
$deviceHeight = 640px

/* Swiper */
$bg-color = #ccc

html, body
  position relative
  height 100%

.swiper-container
  position absolute
  left 0
  top 0
  width $deviceWidth
  height $deviceHeight
  background $bg-color

.swiper-slide
  text-align center
  border 5px solid $bg-color
  word-break break-all
  overflow-y hidden
  
.ss-title
  font-size: 25px;
  color yellow
  font-weight bolder
  -webkit-text-stroke-width: 1.4px;
  -webkit-text-stroke-color: #d93f42;
  letter-spacing: 5px;


/* Slide - ss-x  */
@import "ss-a.styl"
@import "ss-b.styl"
@import "ss-c.styl"


